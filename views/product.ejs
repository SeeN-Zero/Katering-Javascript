<!DOCTYPE html>
<html lang="en">
<%- include fragment/head.ejs %>

<body id="page-top">
<%- include fragment/toast.ejs %>
<!-- Page Wrapper -->
<div id="wrapper">
    <!-- Sidebar -->
    <%- include fragment/sidebar.ejs %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
        <!-- Main Content -->
        <div id="content">
            <!-- Topbar -->
            <%- include fragment/topbar.ejs %>
            <!-- End of Topbar -->
            <!-- Begin Page Content -->

            <div class="container-fluid">

                <!-- Content Row -->
                <div class="row">

                    <!-- Earnings (Monthly) Card Example -->
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-info shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                            Total Produk
                                        </div>
                                        <div class="row no-gutters align-items-center">
                                            <div class="col-auto">
                                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                                                    <%= totalProduct; %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fa-solid fa-shrimp fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-3 col-md-6 mb-4">
                        <div class="card border-left-primary shadow h-100 py-2">
                            <div class="card-body">
                                <div class="row no-gutters align-items-center">
                                    <div class="col mr-2">
                                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                            Total Artikel
                                        </div>
                                        <div class="row no-gutters align-items-center">
                                            <div class="col-auto">
                                                <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800">
                                                    <%= totalArticle; %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fa-solid fa-file-lines fa-2x"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Content Row -->
                <div class="col">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <div class="row">
                                <div class="col-md">
                                    <h3 class="m-0 font-weight-bold text-primary">
                                        Tabel Produk
                                    </h3>
                                </div>
                                <div class="colmd"><a href="#addEmployeeModal" class="btn btn-success btn-icon-split"
                                                      data-toggle="modal">
                                        <span class="icon text-white-50">
                                            <i class="fa-solid fa-plus"></i>
                                        </span>
                                        <span class="text">Tambah Produk</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                    <tr>
                                        <th style="width: 15%">Nama</th>
                                        <th style="width: 70%">Deskripsi</th>
                                        <th>Image</th>
                                        <th style="width: 10%">Action</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <% products.forEach(function(product) { %>
                                        <tr>
                                            <td><%= product.name; %></td>
                                            <td><%= product.description; %></td>
                                            <td>
                                                <a href="#image<%= product._id; %>" class=""
                                                   data-toggle="modal">
                                                    <i class="fa-solid fa-eye"></i>
                                                </a>

                                            </td>
                                            <td>
                                                <div class="row">
                                                    <div class="col-3"><a href="#update<%= product._id; %>"
                                                                          data-toggle="modal">
                                                            <i class="fa-solid fa-pen-to-square"></i>
                                                        </a></div>
                                                    <div class="col-3">
                                                        <a href="#delete<%= product._id; %>"
                                                           data-toggle="modal">
                                                            <i class="fa-solid fa-trash"></i>
                                                        </a></div>
                                                </div>
                                            </td>
                                        </tr>
                                        <%- include fragment/adminproductmodal.ejs %>
                                    <% }); %>
                                    </tbody>

                                    <!-- Add Modal HTML -->
                                    <div id="addEmployeeModal" class="modal fade" data-backdrop="static">
                                        <div class="modal-dialog modal-dialog-centered modal-lg">
                                            <div class="modal-content">
                                                <form action="/product/add" method="POST"
                                                      enctype="multipart/form-data">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title">Tambah Produk</h4>
                                                        <button
                                                                class="close"
                                                                type="button"
                                                                data-dismiss="modal"
                                                                aria-label="Close"
                                                        >
                                                            <span aria-hidden="true">Ã—</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="form-group">
                                                            <label for="name">Nama Produk</label>
                                                            <input class="form-control" type="text" id="name"
                                                                   placeholder="Nama Produk" name="name"
                                                                   required>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="desc">Deskripsi Produk</label>
                                                            <textarea class="form-control" id="desc" name="deskripsi"
                                                                      placeholder="Deskripsi Produk"
                                                                      required></textarea>
                                                        </div>
                                                        <div class="form-group">
                                                            <label for="image">Unggah Gambar</label>
                                                            <input type="file" id="image" class="form-control-file"
                                                                   name="image" value="" accept="image/*" required>
                                                            <div class="invalid-tooltip">
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary"
                                                                    data-dismiss="modal">Batal
                                                            </button>
                                                            <button type="submit" class="btn btn-success">Tambah
                                                            </button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.container-fluid -->
        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        <%- include fragment/foot.ejs %>
        <!-- End of Footer -->
    </div>
    <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>
<%- include fragment/logout.ejs %>

</body>
</html>