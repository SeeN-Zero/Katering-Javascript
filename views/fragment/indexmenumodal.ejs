<!-- Menu Modal-->
<div class="portfolio-modal modal fade" id="menu<%= product._id; %>" tabindex="-1"
     aria-labelledby=""
     aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center pb-5">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <!-- Portfolio Modal - Title-->
                            <h2 class="portfolio-modal-title text-secondary text-uppercase mb-0">
                                <%= product.name; %>
                            </h2>
                            <!-- Icon Divider-->
                            <div class="divider-custom">
                                <div class="divider-custom-line"></div>
                                <div class="divider-custom-icon">
                                    <i class="fas fa-star"></i>
                                </div>
                                <div class="divider-custom-line"></div>
                            </div>
                            <!-- Portfolio Modal - Image-->
                            <img alt="Image Menu" style="width: 400px; height: 225px; max-width: 100%; max-height: 100%"
                                 src="data:image/<%= product.image.contentType; %>;base64,<%= product.image.data.toString('base64'); %>">
                            <!-- Portfolio Modal - Text-->
                            <br>
                            <br>
                            <p class="mb-4">
                                <%= product.description; %>
                            </p>
                            <button class="btn btn-primary" data-bs-dismiss="modal">
                                <i class="fas fa-times fa-fw"></i>
                                Close Window
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>